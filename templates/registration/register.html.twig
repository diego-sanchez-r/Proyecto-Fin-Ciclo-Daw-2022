{% extends 'base.html.twig' %}


{% block title %}InciConnect - Registrar{% endblock %}

{% block body %}
   
<!-- CSS -->
<link rel="stylesheet" href="/css/style_Login_Registro.css" />
        <section style="background-color: #626F8B" >
        <div class="row g-0">
            <div class="col-lg-7 d-none d-lg-block">
                <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
                  <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
                  </div>
                  <div class="carousel-inner">
                    <div class="carousel-item active">
                      <img src="/imagenes/img_web/img-1.jpg" class="min-vh-100 d-block w-100" alt="...">
                      <div class="carousel-caption d-none d-md-block">
                         <h5><b>Que todo sea un paisaje depende de nosotros.</b></h5>
                          <p>Notifica su incidencia.</p>
                      </div>
                    </div>
                    <div class="carousel-item">
                      <img src="/imagenes/img_web/img-2.jpg" class="min-vh-100 d-block w-100" alt="...">
                      <div class="carousel-caption d-none d-md-block">
                        <h5><b>Con una simple foto y unos datos.</b></h5>
                          <p>Notifica su incidencia.</p>
                      </div>
                    </div>
                    <div class="carousel-item">
                      <img src="/imagenes/img_web/img-3.jpg" class="min-vh-100 d-block w-100" alt="...">
                      <div class="carousel-caption d-none d-md-block">
                        <h5><b>Puedes lograr el bien estar de todos.</b></h5>
                          <p>Notifica su incidencia.</p>
                      </div>
                    </div>
                  </div>
                  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                  </button>
                  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                  </button>
                </div>
            </div>
            <div class="col-lg-5 d-flex flex-column align-items-end min-vh-100">
                <div class="align-self-center w-100 px-lg-5 py-lg-4 p-4">
                <h1 class="font-weight-bold mb-4">Registro</h1>
                {{ form_start(registrationForm,{'attr':{'class':'mb-5'}})}}
                    <div class="mb-3">
                      <i class="fa-solid fa-user"></i>
                      <div class="row">
                        <div class="col">
                            {{ form_row(registrationForm.nombre) }}
                        </div>
                        <div class="col">
                            {{ form_row(registrationForm.apellidos) }}
                        </div>
                      </div>
                    </div>
                    <div class="mb-3">
                      {{ form_row(registrationForm.email) }}
                    </div>
                    <div class="mb-3">
                      <i class="fa-solid fa-lock"></i>
                      {{ form_row(registrationForm.Password) }}
                    </div>
                    <div class="row">
                      <div class="col">
                        <i class="fa-solid fa-mobile-screen-button"></i>
                        {{ form_row(registrationForm.telefono) }}
                      </div>
                      <div class="col">
                        <i class="fa-solid fa-map-location-dot"></i>
                        {{ form_row(registrationForm.codigo) }}
                      </div>
                    </div>
                    <div class="mb-3">
                      <br>
                      <i class="fa-solid fa-camera"></i> Foto Perfil{{ form_row(registrationForm.imagen)}}
                    </div>
                    {{ form_row(registrationForm.agreeTerms)}}
                    <br>
                    {{ form_row(registrationForm.Registrar) }}
                    <div class="text-center px-lg-5 pt-lg-3 pb-lg-4 pb-lg-4 mt-auto w-100">
                      <p class="d-inline-block mb-0">¿Ya tengo Cuenta?</p> <a href="{{ path("login") }}" class="text-light font-weight-bold text-decoration-none">Volver y Iniciar Sesión</a>
                    </div>
                {{ form_end(registrationForm)}}
                </div>
                </div>
            </div>
        </div>
      </section>

{% endblock %}