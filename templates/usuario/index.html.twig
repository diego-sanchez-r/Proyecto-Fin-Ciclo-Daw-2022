{% extends 'base.html.twig' %}

{% block title %}Hello UsuarioController!{% endblock %}

{% block body %}
    <link rel="stylesheet" href="/css/style_perfilUsuario.css" />
    
    {%include 'menu.html.twig' %}
    <div class="page-content page-container" id="page-content">
    <div class="padding">
        <div class="row container d-flex justify-content-center">
            <div class="col-xl-6 col-md-12">
                <div class="card user-card-full">
                    <div class="row m-l-0 m-r-0">
                        <div class="col-sm-4 bg-c-lite-green user-profile">
                            <div class="card-block text-center text-white">
                                <div class="m-b-25"><a href="" title="Editar foto"> <img src="/imagenes/img_users/{{usuarioConectado.imagen }}" class="img-radius" height="80px" alt="..."></a><a href="{{ path("logout") }}" title="Cerrar Sesión" style="font-size: x-small; text-decoration: none;" >Salir <i class="fa-solid fa-right-from-bracket"></i></a> </div>
                                <h6 class="f-w-600">{{usuarioConectado.nombre }} {{usuarioConectado.apellidos }}</h6>
                                <p>Mi Perfil</p> <i class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="card-block">
                                <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Información <a href="#" title="Editar Perfil"> <i class="fa-solid fa-pen-to-square"></i></a></h6>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Email</p>
                                        <h6 class="text-muted f-w-400"><input type="email" required value="{{usuarioConectado.email }}" disabled ></h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Teléfono</p>
                                        <h6 class="text-muted f-w-400"><input type="text" required value="{{usuarioConectado.telefono }}" disabled ></h6>
                                    </div>
                                </div>
                                <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Ubicación Usuario</h6>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Código Postal</p>
                                        <h6 class="text-muted f-w-400"><input type="text" required value="{{usuarioConectado.codigo }}" disabled ></h6>
                                    </div>
                                </div>
                                <ul class="social-link list-unstyled m-t-40 m-b-10">
                                    <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="facebook" data-abc="true"><i class="mdi mdi-facebook feather icon-facebook facebook" aria-hidden="true"></i></a></li>
                                    <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="twitter" data-abc="true"><i class="mdi mdi-twitter feather icon-twitter twitter" aria-hidden="true"></i></a></li>
                                    <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="instagram" data-abc="true"><i class="mdi mdi-instagram feather icon-instagram instagram" aria-hidden="true"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    {%include 'footer.html.twig' %} 
{% endblock %}
